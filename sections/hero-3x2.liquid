<section class="hero-3x2 page-width--full">
  {% if section.settings.image != blank %}
    <img
      srcset="
        {{ section.settings.image | img_url: '1200x' }} 1200w,
        {{ section.settings.image | img_url: '1600x' }} 1600w,
        {{ section.settings.image | img_url: '2000x' }} 2000w,
        {{ section.settings.image | img_url: '2400x' }} 2400w,
        {{ section.settings.image | img_url: '3200x' }} 3200w
      "
      sizes="100vw"
      src="{{ section.settings.image | img_url: '3200x' }}"
      alt="{{ section.settings.alt | escape }}"
      width="3200" height="1600" loading="eager"
    >
  {% endif %}
</section>

<style>
.hero-3x2 {
  /* Adjustable height settings controlled by Theme Editor */
  --hero-height-desktop: {{ section.settings.height_vh_desktop | default: 40 }}vh;
  --hero-height-mobile:  {{ section.settings.height_vh_mobile  | default: 34 }}vh;
  --hero-min: {{ section.settings.min_px | default: 300 }}px;
  --hero-max: {{ section.settings.max_px | default: 560 }}px;

  height: clamp(var(--hero-min), var(--hero-height-desktop), var(--hero-max));
  position: relative;
  width: 100%;
}

@media (max-width: 749px) {
  .hero-3x2 {
    height: clamp(220px, var(--hero-height-mobile), 480px);
  }
}

.hero-3x2 > img {
  width: 100%;
  height: 100%;
  aspect-ratio: 3 / 2;
  object-fit: contain; /* preserve full image without cropping */
  display: block;
  background: #0b0f12; /* fallback background behind image */
}
</style>

{% schema %}
{
  "name": "Hero 3:2 Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner image"
    },
    {
      "type": "text",
      "id": "alt",
      "label": "Alt text",
      "default": "Chi-Town Quantum Coffee banner"
    },
    {
      "type": "range",
      "id": "height_vh_desktop",
      "min": 24, "max": 60, "step": 1, "unit": "vh",
      "label": "Desktop height",
      "default": 40
    },
    {
      "type": "range",
      "id": "height_vh_mobile",
      "min": 24, "max": 50, "step": 1, "unit": "vh",
      "label": "Mobile height",
      "default": 34
    },
    {
      "type": "range",
      "id": "min_px",
      "min": 180, "max": 400, "step": 10, "unit": "px",
      "label": "Minimum height (px)",
      "default": 300
    },
    {
      "type": "range",
      "id": "max_px",
      "min": 420, "max": 800, "step": 10, "unit": "px",
      "label": "Maximum height (px)",
      "default": 560
    }
  ],
  "presets": [
    { "name": "Hero 3:2 Banner" }
  ]
}
{% endschema %}
