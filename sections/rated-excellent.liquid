{% comment %}
  Rated Excellent Section
  Displays a star rating with customizable text and styling.
  Editable in Theme Editor for visibility, review count, and star color.
{% endcomment %}

<style>
  .rated-excellent-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 0;
    flex-wrap: nowrap;
  }

  .rated-excellent-stars-{{ section.id }} i {
    color: {{ section.settings.star_color }};
    font-size: 14px;
    margin-right: -2px;
    transition: transform 0.2s, color 0.2s;
  }

  .rated-excellent-stars-{{ section.id }} i:hover {
    transform: scale(1.1);
  }

  .rated-excellent-text-{{ section.id }} {
    font-size: 14px;
    font-weight: 500;
    color: #333;
    white-space: nowrap;
     font-family: DM Sans;
  }

  @media (max-width: 768px) {
    .rated-excellent-{{ section.id }} {
      gap: 4px;
      padding: 6px 0;
    }
    .rated-excellent-stars-{{ section.id }} i {
      font-size: 12px;
      margin-right: -3px;
    }
    .rated-excellent-text-{{ section.id }} {
      font-size: 12px;
    }
  }
</style>

{% if section.settings.show_rated_excellent %}
  <div class="rated-excellent-{{ section.id }}">
    <div class="rated-excellent-stars-{{ section.id }}">
      {% for i in (1..5) %}
        <i class="fas fa-star"></i>
      {% endfor %}
    </div>
    <span class="rated-excellent-text-{{ section.id }}">
      Rated as “<b>Excellent</b>” ({{ section.settings.review_count }}+ reviews)
    </span>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.rated-excellent-stars-{{ section.id }} i').forEach(star => {
        star.addEventListener('click', () => {
          star.style.color = star.style.color === '{{ section.settings.star_color | escape }}' ? '#ccc' : '{{ section.settings.star_color | escape }}';
        });
      });
    });
  </script>
{% endif %}

{% schema %}
{
  "name": "Rated Excellent",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_rated_excellent",
      "label": "Show Rated Excellent",
      "default": true
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Review Count",
      "default": "500",
      "info": "Enter the number of reviews (e.g., 500)."
    },
    {
      "type": "color",
      "id": "star_color",
      "label": "Star Color",
      "default": "#FFD700"
    }
  ],
  "presets": [
    {
      "name": "Rated Excellent"
    }
  ]
}
{% endschema %}
